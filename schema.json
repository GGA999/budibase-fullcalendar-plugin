{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "budibase-fullcalendar",
    "friendlyName": "FullCalendar",
    "description": "Simple calendar component for Budibase",
    "icon": "Calendar",
    "settings": [
      {
        "section": true,
        "name": "Event Group 1",
        "settings": [
          {
            "type": "dataProvider",
            "label": "DataProvider",
            "key": "dataProvider",
            "required": false,
            "defaultValue": {
              "rows": [
                {
                  "title": "Sample Event",
                  "type": "default",
                  "date": "2023-12-03",
                  "start": "2023-12-03T10:00:00",
                  "end": "2023-12-03T12:00:00"
                }
              ]
            }
          },
          {
            "type": "text",
            "key": "mappingTitle",
            "label": "Title Mapping",
            "defaultValue": "title"
          },
          {
            "type": "text",
            "key": "mappingDate",
            "label": "Date Mapping",
            "defaultValue": "date"
          },
          {
            "type": "text",
            "key": "mappingStart",
            "label": "Start Mapping",
            "defaultValue": "start"
          },
          {
            "type": "text",
            "key": "mappingEnd",
            "label": "End Mapping",
            "defaultValue": "end"
          },
          {
            "type": "text",
            "key": "mappingType",
            "label": "Type Mapping",
            "defaultValue": "type",
            "placeholder": "Column for event type (e.g., meeting, sick leave)"
          },
          {
            "type": "boolean",
            "key": "allday",
            "label": "AllDay Mapping",
            "defaultValue": false
          },
          {
            "type": "color",
            "label": "Color Mapping",
            "key": "mappingColor",
            "defaultValue": "#272727"
          },
          {
            "section": true,
            "name": "Event Types (Colors)",
            "settings": [
              {
                "type": "array",
                "label": "Event Types and Colors",
                "key": "eventTypes",
                "defaultValue": [
                  { "name": "default", "color": "#378006" },
                  { "name": "meeting", "color": "#ff0000" },
                  { "name": "holiday", "color": "#00ff00" }
                ],
                "fields": [
                  {
                    "type": "text",
                    "key": "name",
                    "label": "Event Type Name",
                    "placeholder": "E.g., meeting, holiday"
                  },
                  {
                    "type": "color",
                    "key": "color",
                    "label": "Event Type Color",
                    "defaultValue": "#378006"
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "section": true,
        "name": "Event Group 2",
        "settings": [
          {
            "type": "dataProvider",
            "label": "DataProvider 2",
            "key": "dataProvider2",
            "required": false,
            "defaultValue": {
              "rows": []
            }
          },
          {
            "type": "text",
            "key": "mappingTitle2",
            "label": "Title Mapping (Group 2)",
            "defaultValue": "title"
          },
          {
            "type": "text",
            "key": "mappingDate2",
            "label": "Date Mapping (Group 2)",
            "defaultValue": "date"
          },
          {
            "type": "text",
            "key": "mappingStart2",
            "label": "Start Mapping (Group 2)",
            "defaultValue": "start"
          },
          {
            "type": "text",
            "key": "mappingEnd2",
            "label": "End Mapping (Group 2)",
            "defaultValue": "end"
          },
          {
            "type": "text",
            "key": "mappingType2",
            "label": "Type Mapping (Group 2)",
            "defaultValue": "type"
          },
          {
            "type": "boolean",
            "key": "allday2",
            "label": "AllDay Mapping (Group 2)",
            "defaultValue": false
          },
          {
            "type": "color",
            "label": "Color Mapping (Group 2)",
            "key": "mappingColor2",
            "defaultValue": "#000"
          }
        ]
      },
      {
        "section": true,
        "name": "Header options",
        "settings": [
          {
            "type": "text",
            "label": "Start Options",
            "key": "headerOptionsStart",
            "defaultValue": "prev,next today"
          },
          {
            "type": "text",
            "label": "Center Options",
            "key": "headerOptionsCenter",
            "defaultValue": "title"
          },
          {
            "type": "text",
            "label": "End Options",
            "key": "headerOptionsEnd",
            "defaultValue": "dayGridMonth,timeGridWeek,listWeek"
          }
        ]
      },
      {
        "section": true,
        "settings": [
          {
            "type": "select",
            "key": "language",
            "options": ["pt", "en", "fr", "es", "ru"],
            "label": "Language",
            "defaultValue": "en"
          },
          {
            "type": "event",
            "label": "On Event Click",
            "key": "calendarEvent",
            "context": [
              {
                "label": "Clicked Event",
                "key": "value"
              }
            ]
          }
        ]
      }
    ]
  }
}